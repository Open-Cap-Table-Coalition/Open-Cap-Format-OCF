{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/cap_table",
  "title": "Cap Table (\"Snapshot\")",
  "description": "Top-level schema describing a capitalization table.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Identifier for the cap table",
      "type": "string"
    },
    "issuer": {
      "description": "Issuer for the cap table",
      "$ref": "/schema/objects/issuer"
    },
    "stakeholders": {
      "title": "Cap Table - Stakeholder Array",
      "description": "List of stakeholders for the cap table",
      "type": "array",
      "items": {
        "$ref": "/schema/objects/stakeholder"
      }
    },
    "stock_plans": {
      "title": "Cap Table - Stock Plan Array",
      "description": "List of issued stock plans for the cap table",
      "type": "array",
      "items": {
        "$ref": "/schema/objects/stock_plan"
      }
    },
    "stock_legend_templates": {
      "title": "Cap Table - Stock Legend Template Array",
      "description": "List of stock legend templates for the cap table",
      "type": "array",
      "items": {
        "$ref": "/schema/objects/stock_legend_template"
      }
    },
    "transactions": {
      "title": "Cap Table - Transaction Array",
      "description": "List of transactions for the cap table",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "/schema/objects/transactions/acceptance/convertible_acceptance"
          },
          {
            "$ref": "/schema/objects/transactions/acceptance/plan_security_acceptance"
          },
          {
            "$ref": "/schema/objects/transactions/acceptance/stock_acceptance"
          },
          {
            "$ref": "/schema/objects/transactions/acceptance/warrant_acceptance"
          },
          {
            "$ref": "/schema/objects/transactions/cancellation/convertible_cancellation"
          },
          {
            "$ref": "/schema/objects/transactions/cancellation/plan_security_cancellation"
          },
          {
            "$ref": "/schema/objects/transactions/cancellation/stock_cancellation"
          },
          {
            "$ref": "/schema/objects/transactions/cancellation/warrant_cancellation"
          },
          {
            "$ref": "/schema/objects/transactions/conversion/convertible_conversion"
          },
          {
            "$ref": "/schema/objects/transactions/conversion/stock_conversion"
          },
          {
            "$ref": "/schema/objects/transactions/exercise/plan_security_exercise"
          },
          {
            "$ref": "/schema/objects/transactions/exercise/warrant_exercise"
          },
          {
            "$ref": "/schema/objects/transactions/issuance/convertible_issuance"
          },
          {
            "$ref": "/schema/objects/transactions/issuance/plan_security_issuance"
          },
          {
            "$ref": "/schema/objects/transactions/issuance/stock_issuance"
          },
          {
            "$ref": "/schema/objects/transactions/issuance/warrant_issuance"
          },
          {
            "$ref": "/schema/objects/transactions/reissuance/stock_reissuance"
          },
          {
            "$ref": "/schema/objects/transactions/repurchase/stock_repurchase"
          },
          {
            "$ref": "/schema/objects/transactions/repurchase_release/plan_security_repurchase_release"
          },
          {
            "$ref": "/schema/objects/transactions/retraction/convertible_retraction"
          },
          {
            "$ref": "/schema/objects/transactions/retraction/plan_security_retraction"
          },
          {
            "$ref": "/schema/objects/transactions/retraction/stock_retraction"
          },
          {
            "$ref": "/schema/objects/transactions/retraction/warrant_retraction"
          },
          {
            "$ref": "/schema/objects/transactions/split/plan_security_split"
          },
          {
            "$ref": "/schema/objects/transactions/split/stock_split"
          },
          {
            "$ref": "/schema/objects/transactions/split/warrant_split"
          },
          {
            "$ref": "/schema/objects/transactions/transfer/convertible_transfer"
          },
          {
            "$ref": "/schema/objects/transactions/transfer/plan_security_transfer"
          },
          {
            "$ref": "/schema/objects/transactions/transfer/stock_transfer"
          },
          {
            "$ref": "/schema/objects/transactions/transfer/warrant_transfer"
          }
        ]
      }
    },
    "stock_classes": {
      "title": "Cap Table - Stock Class Array",
      "description": "List of stock classes for the cap table",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "/schema/objects/stock_class"
      }
    },
    "vesting_schedules": {
      "title": "Cap Table - Vesting Schedule Array",
      "description": "List of vesting schedules for the cap table",
      "type": "array",
      "items": {
        "$ref": "/schema/objects/vesting_schedule"
      }
    },
    "valuations": {
      "title": "Cap Table - Valuation Array",
      "description": "List of valuations for the cap table",
      "type": "array",
      "items": {
        "$ref": "/schema/objects/valuation"
      }
    },
    "comments": {
      "title": "Cap Table - Comment Array",
      "description": "Unstructured text comments related to and stored for the cap table",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "issuer",
    "stakeholders",
    "stock_plans",
    "stock_legend_templates",
    "transactions",
    "stock_classes",
    "vesting_schedules",
    "valuations"
  ],
  "additionalProperties": false
}

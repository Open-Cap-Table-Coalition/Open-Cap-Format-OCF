{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/types/File.schema.json",
  "title": "Type - File",
  "description": "Type representation of a file",
  "type": "object",
  "properties": {
    "filepath": {
      "description": "Path to the file within the OCF container",
      "type": "string"
    },
    "md5": {
      "description": "MD5 file checksum",
      "$ref": "https://opencaptablecoalition.com/schema/types/Md5.schema.json"
    }
  },
  "required": ["filepath", "md5"]
}
